{
  "name": "nacha-file-parser",
  "displayName": "ACH Syntax Highlighter and Validator",
  "description": "Syntax highlighter and validator for NACHA ACH files",
  "version": "0.0.6",
  "publisher": "RaviRanjan",
  "icon": "icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rvrn22/nacha-file-parser.git"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:ach"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ach",
        "aliases": [
          "ACH",
          "NACHA"
        ],
        "extensions": [
          ".ach"
        ]
      }
    ],
    "grammars": [
      {
        "language": "ach",
        "scopeName": "source.ach",
        "path": "./syntaxes/ach.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "nacha-file-parser.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  }
}