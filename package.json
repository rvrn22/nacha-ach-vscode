{
  "name": "nacha-file-parser",
  "displayName": "ACH Syntax Highlighter and Validator",
  "description": "Syntax highlighter and validator for NACHA ACH files",
  "version": "0.0.4",
  "publisher": "RaviRanjan",
  "icon": "icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rvrn22/nacha-file-parser.git"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:ach"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ach",
        "aliases": [
          "ACH",
          "NACHA"
        ],
        "extensions": [
          ".ach"
        ]
      }
    ],
    "grammars": [
      {
        "language": "ach",
        "scopeName": "source.ach",
        "path": "./syntaxes/ach.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "nacha-file-parser.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "Nacha File Parser",
      "properties": {
        "nachaFileParser.recordTypeColors": {
          "type": "object",
          "description": "Background colors for each ACH record type (1-9)",
          "properties": {
            "1": {
              "type": "string",
              "format": "color",
              "description": "Color for File Header Record (Type 1)"
            },
            "5": {
              "type": "string",
              "format": "color",
              "description": "Color for Batch Header Record (Type 5)"
            },
            "6": {
              "type": "string",
              "format": "color",
              "description": "Color for Entry Detail Record (Type 6)"
            },
            "7": {
              "type": "string",
              "format": "color",
              "description": "Color for Addenda Record (Type 7)"
            },
            "8": {
              "type": "string",
              "format": "color",
              "description": "Color for Batch Control Record (Type 8)"
            },
            "9": {
              "type": "string",
              "format": "color",
              "description": "Color for File Control Record (Type 9)"
            }
          },
          "default": {
            "1": "#f443361f",
            "5": "#4caf501f",
            "6": "#2196f31f",
            "7": "#ffeb3b33",
            "8": "#9c27b01f",
            "9": "#607d8b1f"
          }
        },
        "nachaFileParser.batchRowColors": {
          "type": "array",
          "default": [
            "#f7d3a1",
            "#f9f1d7"
          ],
          "items": {
            "type": "string",
            "format": "color"
          },
          "description": "Alternating background colors for batch row highlighting"
        },
        "nachaFileParser.paddingRowColor": {
          "type": "string",
          "format": "color",
          "default": "#c8c8c814",
          "description": "Background color for padding/filler records"
        },
        "nachaFileParser.batchSeparatorColor": {
          "type": "string",
          "format": "color",
          "default": "#64646466",
          "description": "Border color for batch separator lines"
        },
        "nachaFileParser.fieldColors": {
          "type": "array",
          "default": [
            "#01572b",
            "#5d04f6"
          ],
          "items": {
            "type": "string",
            "format": "color"
          },
          "description": "Alternating text colors for field-level highlighting"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  }
}